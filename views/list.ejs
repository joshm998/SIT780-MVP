<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body>
    <%- include('header.ejs') %>
    <a class="btn btn-primary mt-2 mb-2 ml-2" href="/add" role="button">Add Item</a>
    <h1 class="ml-2 mt-4">Models</h1>
    <% for(var i=0; i < models.length; i++) {%>
    <div class="card ml-2 mt-2" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><%= models[i].name %></h5>
            <p class="card-text">Printer <%= models[i].printer %></p>
            <a href="/model?id=<%= models[i].id %>" class="btn btn-primary">View Model</a>
        </div>
    </div>
    <% } %>
</body>